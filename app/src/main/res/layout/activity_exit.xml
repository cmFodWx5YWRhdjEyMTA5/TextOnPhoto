<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.dev.signatureonphoto.features.exit.ExitActivity">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/img_exit"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp">

        <TextView
            android:id="@+id/txt_info_1"
            android:textSize="@dimen/_50sdp"
            android:textColor="@color/white"
            android:text="We "
            android:fontFamily="@font/great_vibes_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="end"
            android:id="@+id/txt_info_2"
            android:textSize="@dimen/_50sdp"
            android:textColor="@color/white"
            android:text="can\'t wait "
            android:fontFamily="@font/great_vibes_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_70sdp"
            android:id="@+id/txt_info_3"
            android:textSize="@dimen/_50sdp"
            android:textColor="@color/white"
            android:text="@string/exit_info_3"
            android:fontFamily="@font/great_vibes_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/_102sdp"
            android:id="@+id/txt_info_4"
            android:textSize="@dimen/_50sdp"
            android:textColor="@color/white"
            android:text="@string/exit_info_4"
            android:fontFamily="@font/great_vibes_regular"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <TextView
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/bg_button_gradient"
        android:id="@+id/txt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/great_vibes_regular"
        android:text="Exiting..."
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp" />

</RelativeLayout>
