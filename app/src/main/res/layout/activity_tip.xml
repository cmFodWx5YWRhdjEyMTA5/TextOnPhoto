<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.signatureonphoto.tip.TipActivity">

    <ScrollView
        android:layout_above="@id/layout_adaptive"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_main"
            android:paddingTop="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bg_tips"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="27dp"
                android:paddingEnd="27dp"
               >

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_logo_tip"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="202dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_title_tip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="3dp"
                    android:background="@drawable/dashline"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="27dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_number_tip"
                            android:scaleType="fitCenter"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/neo_sentinal"
                            android:textAlignment="center"
                            android:text="1" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/function"
                        android:fontFamily="@font/neo_sentinal"
                        android:textColor="@color/title_tip"
                        android:layout_marginStart="7dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="237dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_image_1_tip"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_enable_tip"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_text_tip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/neo_sentinal"
                            android:layout_marginBottom="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_enable_tip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resize"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/neo_sentinal"
                            android:layout_marginBottom="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_reset_tip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reset_text_tip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/neo_sentinal"
                            android:layout_marginBottom="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete_tip"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delete_text_tip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/neo_sentinal"
                            android:layout_marginBottom="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="27dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_number_tip"
                            android:scaleType="fitCenter"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/neo_sentinal"
                            android:textAlignment="center"
                            android:text="2" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/guide"
                        android:fontFamily="@font/neo_sentinal"
                        android:textColor="@color/title_tip"
                        android:layout_marginStart="7dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step"
                        android:textColor="@color/colorTitle"
                        android:textAllCaps="true"
                        android:fontFamily="@font/neo_sentinal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 01"
                        android:textSize="16sp"
                        android:textColor="@color/title_step"
                        android:textStyle="bold"
                        android:fontFamily="@font/neo_sentinal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_image_2_tip"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step"
                        android:textColor="@color/colorTitle"
                        android:textAllCaps="true"
                        android:fontFamily="@font/neo_sentinal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 02"
                        android:textSize="16sp"
                        android:textColor="@color/title_step"
                        android:textStyle="bold"
                        android:fontFamily="@font/neo_sentinal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_image_3_tip"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step"
                        android:textColor="@color/colorTitle"
                        android:textAllCaps="true"
                        android:fontFamily="@font/neo_sentinal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 03"
                        android:textSize="16sp"
                        android:textColor="@color/title_step"
                        android:textStyle="bold"
                        android:fontFamily="@font/neo_sentinal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_image_4_tip"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step"
                        android:textColor="@color/colorTitle"
                        android:textAllCaps="true"
                        android:fontFamily="@font/neo_sentinal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 04"
                        android:textSize="16sp"
                        android:textColor="@color/title_step"
                        android:textStyle="bold"
                        android:fontFamily="@font/neo_sentinal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="258dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_image_5_tip"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="@string/error_tip"
                    android:textColor="#ce2727"
                    android:fontFamily="@font/neo_sentinal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </RelativeLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_adaptive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

</RelativeLayout>
