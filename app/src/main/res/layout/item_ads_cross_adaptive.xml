<LinearLayout android:id="@+id/layoutHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bg_cross_item_adaptive"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/img_adchoice"
        app:srcCompat="@drawable/ic_adchoice"
        android:layout_gravity="top"
        android:padding="@dimen/_1sdp"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp" />
    <ImageView
        android:padding="@dimen/_4sdp"
        android:id="@+id/img_icon_app"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:layout_weight="3">
        <RelativeLayout
            android:id="@+id/layoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_2sdp">
            <TextView
                android:id="@+id/txt_name_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Super Note"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="-2dp"
                app:srcCompat="@drawable/ic_ad"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/txt_name_app"
                android:layout_toRightOf="@id/txt_name_app" />
        </RelativeLayout>
        <TextView
            android:paddingTop="@dimen/_2sdp"
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi ChÃº: Widget Note, Color  Notes &amp; Notepad"
            android:textSize="12sp"
            android:maxLines="2"
            android:layout_below="@id/layoutTitle"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_install"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_ads_cross_install"
        android:text="INSTALL"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_5sdp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="@dimen/_3sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textAllCaps="false"
        />

</LinearLayout>