<?xml version="1.0" encoding="utf-8"?>
<com.dev.signatureonphoto.features.saved.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.jackandphantom.circularimageview.RoundedImage
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/_2sdp"
        android:id="@+id/img_item"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_app"
        />
    <ImageView
        android:id="@+id/img_check_item"
        android:visibility="gone"
        android:background="@drawable/icon_tick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp" />
    <ImageView
        android:src="@drawable/ic_delete_tip"
        android:id="@+id/img_delete"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

</com.dev.signatureonphoto.features.saved.SquareView>