<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/layout_sticker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_Sticker"
                android:layout_width="30dp"
                android:layout_height="29dp"
                app:srcCompat="@drawable/ic_library_black" />

            <TextView
                android:id="@+id/txt_sticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="@string/sticker" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_key_item"
            android:layout_gravity="end"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_ornament_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_line"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txt_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/ornament_line"/>

        </LinearLayout>

        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_new"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ornament_typo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_typo"/>

            <TextView
                android:id="@+id/txt_typo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:text="@string/ornament_typo"/>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_new"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ornament_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_border"/>

            <TextView
                android:id="@+id/txt_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="7dp"
                android:text="@string/ornament_border"/>
        </LinearLayout>

        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_new"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>